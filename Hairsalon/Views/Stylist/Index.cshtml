@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylist have been added yet!</h3>
} 

<ul>
  @foreach(Stylists stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id =stylist.StylistsId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Add new stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>